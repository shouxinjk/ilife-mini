.scroll-list {
    width: 100%;
    height: 100%;
}

.addmore{
  line-height: 40px;
  width:100%;
}

.connections{
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border: 1px solid #f8f8f8;
  background: #fff;
}

.list {
    width:60%;
    font-size: 32.81rpx;
    display:flex;
    align-items: center;
    padding:0 5px;
}

.similarity{
  width:20%;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.list-icon-wrap {
    width:35%;
    padding:auto;
}

.list-text-wrap {
    width:65%;
    display: flex;
    flex-direction: column;
}

.list-icon {
    width: 120rpx;
    height:120rpx;
    margin-top:4px;
    margin-left:10px;
}

.list-text {
  font-size: 30rpx;
  width:100%;
  white-space: nowrap;
  overflow:hidden; 
  text-overflow:ellipsis;
}

.small{
  font-size:24rpx;
}
.silver{
  color:silver;
}

.green{
  color:darkgreen;
}
.large{
  font-size:48rpx;
}

/*buttons*/
.btn-wrap{
  height:40px;
  margin:auto;
}
.btn{
  width:40%;
  margin:auto;
  height:32px;
  font-size: 14px;
}
.btn-wrap-small{
  width:20%;
}
.btn-small{
  width:85%;
  margin:auto;
  height:24px;
  font-size: 10px;
}

.toconnect{
  color:darkorange;
}

.connected{
  color:darkgreen
}

.hot-box-more{
  width:100%;
  font-size:12px;
  margin:5px auto;
}
