.user {
    width: 100%;
    height: 100%;
}

.list {
    background: #f8f8f8;
    height: 100.77rpx;
    line-height: 100.77rpx;
    padding: 0 35.15rpx;
    border: 1px solid #f8f8f8;
    background: #fff;
    font-size: 32.81rpx;
}

.info {
    height: 200rpx;
    background: url("http://pic.90sjimg.com/back_pic/qk/back_origin_pic/00/03/17/b72c0c964488c8fe346fc3d1c3c10cfd.jpg") #FFF no-repeat 0 50%; 
    background-size: cover; 
    display:flex;
    align-content:center;
}

.info-general{
    width:25%;
    text-align: center;
}

.general-icon {
    width: 120rpx;
    height: 120rpx;
    border: 5rpx solid white;
    border-radius: 50%;
    margin-top:35rpx;/*注意：如果图片高度改变需要相应调整*/
}

.info-text{
  font-size:12px;
  color:white;
}

.info-blank{
  margin-top:5px;
}

.info-detail{
  width:55%;
  margin:auto;
}

.info-badge{
  width:20%;
  margin:auto;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.badge-icon {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
}

.personas{
  display:flex;
  justify-content: space-around;
  flex-wrap: nowrap;
  margin-top:5px;
}

.persona{
  width:240px;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.persona-icon{
  width:240rpx;
  height:240rpx;
}

.persona-name{
  font-size:14px;
}

.tags{
  display:flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
  margin-top:10px;
}

.tag{
  font-size:14px;
  line-height:18px;
  border-radius: 5rpx;
  color:silver;
  margin:2px;
  padding:2px;
  padding-left:24px;/*预留前置图标*/
  border:1px solid silver;
}
.tag::before{ content: ''; height: 22px; width: 22px; background: url("http://www.haotu.net/up/3116/32/Windows8.1-416.png")  #FFF no-repeat 50% 50%; background-size: cover; position: absolute; margin-left:-24px;margin-top:-2px;}


.tag-pending{
  font-size:14px;
  line-height:18px;
  border-radius: 5rpx;
  color:silver;
  margin:2px;
  padding:2px;
  padding-left:24px;/*预留前置图标*/
  border:1px solid silver;
}
.tag-pending::before{ content: ''; height: 22px; width: 22px; background: url("http://img.52lishi.com/pic/201307/16/9266eb7345_32.png")  #FFF no-repeat 50% 50%; background-size: cover; position: absolute; margin-left:-24px;margin-top:-2px;}

.list-icon-wrap {
    float: left;
    height: 100.77rpx;
    line-height: 100.77rpx;
}

.list-icon {
    width: 42.18rpx;
    height: 39.84rpx;
    margin-top: 30rpx;
}

.arrow-wrap {
    float: right;
    color: #999;
    line-height: 100.77rpx;
    font-size: 23.44rpx;
}

.list-arrow {
    width: 11.72rpx;
    height: 25.78rpx;
    margin: 35rpx 0 0 18.75rpx;

}

.list-text {
    float: left;
    font-size: 32.81rpx;
    text-indent: 29.29rpx;
}

.order {
    overflow: hidden;
    display: -webkit-box;
    background: #fff;
    font-size: 25.78rpx;
}

.order-cell {
    text-align: center;
    -webkit-box-flex: 1;
    margin-top: 10rpx;
    position: relative;
}

.order-cell-icon-big {
    width: 51.56rpx;
    height: 46.87rpx;
}

.order-cell-icon-small {
    width: 44.53rpx;
    height: 46.87rpx;
}

.badge {
    position: absolute;
    left: 52%;
    top: -6%;
    display: inline-block;
    padding: .1rem .25rem;
    font-size: .6rem;
    line-height: 1;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    border-radius: .4rem;
    background-color: #fc3151;
    color: white;
    box-sizing: border-box;
    -webkit-transition: all .4s ease-out;
}