/**index.wxss**/
/*menu*/
/** 修改默认的navigator点击态 **/
.navigator-hover {
    color:blue;
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover {
    color:red;
}

.menus{
  width:100%;
  white-space: nowrap;
  height:16px;
  margin:2px 0;
}

.menu{
  margin-left:2px;
  margin-right:10px;
  font-size:14px;
  line-height: 16px;
  color:gray;
  width:100%;
  display:inline-block;
}

.menu-selected{
  margin-left:2px;
  margin-right:10px;
  font-size:14px;
  line-height: 16px;
  color:green;
  width:100%;
  display:inline-block;
}

.red-point{
  position: relative;
}

.red-point::before{
  content: " ";
  border: 3px solid red;/*设置红色*/
  border-radius:3px;/*设置圆角*/
  position: absolute;
  z-index: 1000;
  right: 0;
  margin-right: -8px;
}

.btn-area{
  display:flex;
  flex-direction: row;
  flex-wrap:nowrap;
}
/*end of menu*/


.WxMasonryView{
  column-count:2;
  column-gap: 0;
  width: 100%;
}
.WxMasonry{
  width: 96%;
  background: #fefefe;
  border: 0px solid #fcfcfc;
  border-radius: 10rpx;
  box-shadow: 0px 2px 2px rgba(34, 25, 25, 0.4);
  margin: 2px;
  margin-top: 5px;
  padding: 0;
  padding-bottom: 2px;
  transition: opacity .4s ease-in-out;
  display: inline-block;
}
.WxMasonryImage{
  width: 100% !important;
  border-top-left-radius:10rpx;
  border-top-right-radius:10rpx;
  display: inline-block;
}



.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }

.hot-box{ display: block; height: 100%; font-family: Helvetica, Arial, "Hiragino Sans GB", "Source Han Sans CN", "PingFang SC", Roboto, "微软雅黑", "Heiti SC", "Microsoft Yahei", sans-serif }
.hot-box-main{ display: block; overflow: hidden; margin-bottom: 20px; background: #FFF; }

.hot-main{ height: 50px; background: url("http://pic.90sjimg.com/back_pic/qk/back_origin_pic/00/03/17/b72c0c964488c8fe346fc3d1c3c10cfd.jpg") #FFF no-repeat 0 50%; background-size: cover; padding: 30px 20px; position: relative; z-index: 1; }
.hot-main::before{ position: absolute; top: 0; bottom: 0; left: 0; right: 0; content: ''; background-image: linear-gradient(180deg, rgba(0,0,0,0.05) 5%,rgba(0,0,0,0.85) 100%); }

.hot-main-box{ position: relative; z-index: 2; }
.hot-main-title{ color: #FFF; font-size: 34rpx;  }
.hot-main-subtitle{ color: #FFF; font-size: 26rpx; margin-top: 4px; }

.hot-box-top{ padding: 20px; text-align: center; }
.hot-box-title{ font-size: 24rpx; height: 30px; line-height: 32px; font-weight: 400; color: #444; padding: 5px 10px; border: 1px solid #444; }
.hot-box-more{
  width:100%;
  font-size:12px;
  text-align: center;
  margin:5px auto;
}

.hot-box-more image{
  width:100px;
  text-align: center;
  margin:5px auto;
}

.list-box{ 
  padding: 0; 
  display: inline-block; 
  font-size: 24rpx;
  border-bottom: 1px solid #F6F6F6; 
}
.list-box-title{ font-size:24rpx; line-height: 30rpx; margin:2px 5px;}

.meta{
  height:36px;
  position: relative;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  align-content:center;
  justify-content:space-around;  
  text-align: center;
}

.host{
  width:60%;
  height:36px;
}
.host-avatar{ width: 32px; height: 32px; margin:0px 5px;position:absolute}
.host-avatar-img{ width: 32px; height: 32px; border-radius: 50%; border: 1px solid #F2F2F2; }
.host-name{
  line-height: 36px;
  margin-left:44px;
  width:80px; 
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size:18rpx;
  display: inline-block;
}

.likes{
  width:40%;
  height:36px;
  float:right;
  margin-right:0;
}
.likes-number{
  line-height: 36px;
  font-size:18rpx;
  float:right;
  padding-left: 18px; position: relative; font-weight: normal; margin-right:5px;
}
.likes-number::before{ content: ''; height: 16px; width: 16px; background: url("http://www.shouxinjk.net/list/images/favorite-16.png")  #FFF no-repeat 50% 50%; background-size: cover; position: absolute; top:11px; left: 0; }


